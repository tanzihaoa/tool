<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/str1"
        android:text="贷款年限"
        android:textColor="#060606"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_width="80dp"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/str2"
        app:layout_constraintHorizontal_chainStyle="spread_inside"/>

    <TextView
        android:id="@+id/str2"
        android:text="贷款年限"
        android:textColor="#060606"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_width="80dp"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/str1"
        app:layout_constraintTop_toTopOf="@+id/str1"
        app:layout_constraintEnd_toStartOf="@+id/str3"/>

    <TextView
        android:id="@+id/str3"
        android:text="贷款年限"
        android:textColor="#060606"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginEnd="15dp"
        android:layout_width="80dp"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/str2"
        app:layout_constraintTop_toTopOf="@+id/str1"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>