<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/item_currency_iv"
        android:src="@drawable/m_cny"
        android:layout_width="26dp"
        android:layout_height="18dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/item_currency_tv"
        android:text="人民币 CNY"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="#000"
        android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/item_currency_iv"
        app:layout_constraintBottom_toBottomOf="@+id/item_currency_iv"
        app:layout_constraintStart_toEndOf="@+id/item_currency_iv"/>

</androidx.constraintlayout.widget.ConstraintLayout>